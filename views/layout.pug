doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(content='width=device-width, initial-scale=1.0' name='viewport')
        title Andrew Bruner #{'|'} Weblog
        link(
            crossorigin='anonymous'
            href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css'
            integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2'
            rel='stylesheet'
        )
    body
        div(class=['container'] id='app')
            nav(class=['navbar', 'navbar-light'])
                a(
                    class=['font-weight-light', 'navbar-brand']
                    href='/'
                ) Andrew Bruner #{'|'} Weblog
                block authentication
                    if !user
                        a(
                            class=['btn', 'btn-outline-success', 'btn-sm', 'font-weight-light']
                            href='/authenticate'
                            role='button'
                        ) Log In
                    if user
                        span(class=['font-weight-light']) Welcome #{user.username}
                            a(
                                class=['btn', 'btn-outline-success', 'btn-sm', 'font-weight-light', 'ml-2']
                                href='/new-post'
                                role='button'
                            ) New Post
                            a(
                                class=['btn', 'btn-outline-danger', 'btn-sm', 'font-weight-light', 'ml-2']
                                href='/logout'
                                role='button'
                            ) Log Out
            block content
